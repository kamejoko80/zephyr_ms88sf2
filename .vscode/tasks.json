{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Config",
			"type": "shell",
			"group": "build",
			"command": "west build -t guiconfig -b ${config:BOARD} ${config:ZEPHYR_APP_DIR}",
			"problemMatcher": []
		},		
		{
			"label": "Build",
			"type": "shell",
			"group": "build",
			"command": "west build -p auto -b ${config:BOARD} ${config:ZEPHYR_APP_DIR}",
			"problemMatcher": []
		},
		{
			"label": "Clean",
			"type": "shell",
			"group": "build",
			"command": "rm -rf build",
			"problemMatcher": []
		},
		{
			"label": "Flash",
			"type": "shell",
			"group": "build",
			"command": "west flash",
			"problemMatcher": []
		}				
	]
}